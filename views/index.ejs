

<div id="Header">
    <img src="/img/shopfast-logo-full.png" alt="logo">
    <div id="formContainer">
        <h2>Add your product for sale</h2>
        <form action="/data" method="post" enctype="multipart/form-data" id="add-data-form" class="light-border">
        <input class="light-border" type="text" name="name" placeholder="Name" required>
        <input class="light-border" type="text" name="owner_id" placeholder="Owner_id" required>
        <input class="light-border" type="text" name="price_flex" placeholder="Price_flex" required>
        <input class="light-border" type="text" name="price"  placeholder="Price" required>
        <input class="light-border" type="text" name="description" placeholder="Description" required>
        <input class="light-border" type="text" name="location" placeholder="Location" required>
        <input class="light-border" type="file" name="url" accept="image/*" placeholder="Choose file">
        <button class="light-border" type="submit">Save</button>
        </form>
    </div>
        
    
    
</div>
<div id="main">
    <div class="saleBoard">
        <img class="slideImage" src="http://placekitten.com/400/300">
        <img class="slideImage" src="http://placekitten.com/400/302">
        <button class="minusSlide" onclick="plusDivs(-1)">&#10094;</button>
        <button class="plusSlide" onclick="plusDivs(1)">&#10095;</button>
    </div>
</div>

<script type="text/javascript" src="/js/index.js"></script>