<%- include ('./partials/navigation') %>


<div id="Header">
  <img src="/images/shopfast-logo-full.png" alt="logo" id="logo">
 
  <div id="filterDiv">
  <input type="range" min="5" max="100" value="50" class="slider" id="myRange">
  <button class="light-border" id="filter">Filter by distance</button>
  <h3 id="distance">50km</h3>
  </div>
</div>
<div id="siteContainer">
  <div id="main"></div>

  <div id="sidebar">
  <div id="formContainer">
    <h2>Add your product for sale</h2>
    <form
      id="fileCatcher"
      action="/data"
      method="post"
      enctype="multipart/form-data"
      id="add-data-form"
      class="light-border"
    >
      <input
        class="light-border"
        type="text"
        name="name"
        placeholder="Name"
        required
      />
      <select id="price_flex" name="price_flex">
        <option value="Neuvoteltavissa">Neuvoteltavissa</option>
        <option value="Ei Neuvoteltavissa">Ei Neuvoteltavissa</option>
      </select>
     
      <input
        class="light-border"
        type="text"
        name="price"
        placeholder="Price"
        required
      />
      <input
        class="light-border"
        type="text"
        name="description"
        placeholder="Description"
        required
      />
      <input
        id="location"
        class="light-border"
        type="text"
        name="location"
        placeholder="Location"
        readonly, required
      />
      <input
        class="light-border"
        type="file"
        name="url[]"
        id="fileUpload"
        accept="image/*"
        placeholder="Choose file"
        multiple=""
        required
      />
      <button class="light-border" type="submit" id="saveButton">Save</button>
    </form>
    <button class="light-border" id="locationInsert">Insert your location</button>
  </div>
</div>
</div>

