<div id="chatStart">
  <h1 id="chatHeader">Type your message into textfield if you are interested</h1>
  <ul id="modalList">
    <li id="li0"></li>
    <li id="li1"></li>
    <li id="li2"></li>
    <li id="li3"></li>
    <li id="li4"></li>
